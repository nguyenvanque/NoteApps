<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layoutAddUrlContainer"
    android:layout_gravity="center"
    android:gravity="center_vertical"
    android:background="@drawable/background_dialog"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageAddUrl"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:src="@drawable/ic_link"
        android:tint="@color/colorWhite" />

    <TextView
        android:layout_toRightOf="@id/imageAddUrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ubuntubold"
        android:includeFontPadding="false"
        android:text="Add url"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_14sdp" />
    <EditText
        android:id="@+id/inputAddUrl"
        android:layout_below="@id/imageAddUrl"
        android:hint="Nháº­p url"
        android:background="@null"
        android:textColor="@color/colorWhite"
        android:importantForAutofill="no"
        android:paddingStart="10dp"
        android:inputType="textUri"
        android:textColorHint="@color/colorTextHint"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:paddingLeft="10dp" />
    <TextView
        android:id="@+id/textAdd"
        android:padding="@dimen/_8sdp"
        android:includeFontPadding="false"
        android:layout_below="@id/inputAddUrl"
        android:layout_alignParentRight="true"
        android:text="ADD"
        android:textColor="@color/colorNoteColor2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/textCancel"
        android:layout_below="@id/inputAddUrl"
        android:text="CANCEL"
        android:textColor="@color/colorNoteColor2"
        android:layout_marginRight="60dp"
        android:includeFontPadding="false"
        android:layout_alignParentRight="true"
        android:padding="@dimen/_8sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
/>
</RelativeLayout>